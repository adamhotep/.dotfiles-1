#!/bin/sh

cat <<EOF | xmenu | sh &
Ranger		$TERMINAL -d 80 25 --class ranger,Ranger -e ~/bin/openLastRanger
Alacritty		alacritty
Chrome		google-chrome-stable
Onboard		onboard

Applications
	Nautilus		nautilus
	Spotify		spotify > /dev/null 2>&1 &
	Cmus		$TERMINAL -d 80 25 --class cmus,Cmus -e cmus &
	XDM		xdman &
	Popcorntime		popcorntime &
	Responsively		~/Executables/ResponsivelyApp-0.14.0.AppImage &
	Deluge		deluge-gtk &
	Notes		~/bin/notes &

Files
	Home	     $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/
	Downloads	 $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/Downloads
	YassineHD	 $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/mounting/YassineHD
	MyShit	   $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/mounting/YassineHD/MyShit
	Watch	     $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/mounting/YassineHD/Watch/Shows/Banshee
	Videos	   $TERMINAL -d 80 25 --class ranger,Ranger -e $FILE --choosedir=/home/yaslix/latestDir ~/mounting/YassineHD/Videos

Power
	Suspend			~/bin/suspendPc
	Lock	  		playerctl pause && slock || slock
	Exit	  		killall Xorg
	Shutdown		systemctl poweroff
	Reboot			systemctl reboot
EOF
