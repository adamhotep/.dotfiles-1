#!/bin/sh

cat <<EOF | xmenu | sh &
PCManFm		pcmanfm &
Spotify		/opt/google/chrome/google-chrome --app-id=pjibgclleladliembfgfagdaldikeohf &
Alacritty		alacritty
Chrome		google-chrome-stable
Onboard		onboard

Applications
	Cmus		$TERMINAL --class cmus,Cmus -e cmus &
	XDM		xdman &
	Notes		~/bin/notes &
	Responsively		~/Executables/ResponsivelyApp-0.14.0.AppImage &
	Deluge		deluge-gtk &
	Calculator		uno-calculator &
	Gammy		gammy &

Files
	Home	     $TERMINAL --class lf,Lf -e $FILE ~/
	Downloads	 $TERMINAL --class lf,Lf -e $FILE ~/Downloads
	YassineHD	 $TERMINAL --class lf,Lf -e $FILE ~/mounting/YassineHD
	MyShit	   $TERMINAL --class lf,Lf -e $FILE ~/mounting/YassineHD/MyShit
	Watch	     $TERMINAL --class lf,Lf -e $FILE ~/mounting/YassineHD/Watch/Shows/Banshee
	Videos	   $TERMINAL --class lf,Lf -e $FILE ~/mounting/YassineHD/Videos

Power
	Suspend			~/bin/suspendPc
	Lock	  		playerctl pause && slock || slock
	Exit	  		killall Xorg
	Shutdown		systemctl poweroff
	Reboot			systemctl reboot
EOF
