; Power controls
[module/poweroff]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fc1703
line-size = 1
click-left = [ "$(echo -e "Cancel\nShutdown" | dmenu)" = "Shutdown" ] && systemctl poweroff

[module/restart]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fc9803
line-size = 1
click-left = [ "$(echo -e "Cancel\nRestart" | dmenu)" = "Restart" ] && systemctl reboot

[module/kxorg]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #0398fc
line-size = 1
click-left = "[ "$(echo -e "Cancel\nLeave" | dmenu)" = "Leave" ] && killall Xorg"

[module/suspend]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #25db1d
line-size = 1
click-left = [ "$(echo -e "Cancel\nSuspend" | dmenu)" = "Suspend" ] && systemctl suspend

; Spotify controls
[module/previous]
type = custom/script
format = "%{T3}<label>"
format-padding = 5
exec = echo ""
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
type = custom/script
format = "%{T3}<label>"
format-padding = 5
exec = echo ""
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/playpause]
