label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20
label-urgent-padding = 2

label-empty =

;Shell programs
[module/scrollWindows]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fcfd95
line-size = 1
click-left = bspc node -f next.local &
click-right= bspc node -f prev.local &

[module/pmount]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fcfd95
line-size = 1
click-left = ~/bin/mounter &

[module/pssh]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = "! pgrep sshfs >/dev/null && echo ""; exit 0"
format-underline = #fcfd95
line-size = 1
click-left = ~/bin/sshRuner &

[module/sssh]
type = custom/script
interval = 5
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fc1703
line-size = 1
exec-if = pgrep -x sshfs
click-left = sudo pkill sshfs

[module/pmove]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fcfd95
line-size = 1
click-left = ~/bin/xmenuDesktop

[module/cbrowser]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
interval = 1
exec = ~/bin/browserControls
exec-if = dbus-send --print-reply  --dest=org.mpris.MediaPlayer2.chrome.instance$(pgrep -x chrome | head -n 1) /org/mpris/MediaPlayer2 org.freedesktop.DBus.Properties.Get string:'org.mpris.MediaPlayer2.Player' string:'PlaybackStatus'
format-underline = #ff00ff
line-size = 1
click-left = ~/bin/browserControls toggle
double-click-left = bspc desktop --focus ^2

[module/pkillen]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = echo ""
format-underline = #fcfd95
line-size = 1
click-left = bspc node -c

[module/ccmus]
type = custom/script
exec = ~/bin/cmusingControls
exec-if = pgrep -x cmus
interval = 1
format-padding = 2

click-left = cmus-remote --pause
click-right = ~/bin/cmusingControls controls
double-click-left = bspc desktop --focus ^4
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%

label-font = 3
format = <label>
format-underline = #0a6cf5
label = %output%
label-maxlen = 50

[module/pshare]
type = custom/script
format = "%{T3}<label>"
format-padding = 2
exec = "! pgrep create_ap >/dev/null && echo ""; exit 0"
format-underline = #fcfd95
line-size = 1
click-left = sudo create_ap wlo1 wlo1 bota mayamaya &
click-right = ~/bin/sharedDevices &

