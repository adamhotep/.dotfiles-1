; Spotify controls
[module/cspotify]
type = custom/script
interval = 1
format = "%{T3}<label>"
format-padding = 2
exec = ~/bin/spotifyControls
exec-if = pgrep -x spotify
format-underline = #1db954
line-size = 1
click-left = ~/bin/spotifyControls stop &
click-right = ~/bin/spotifyControls controls &
double-click-left = bspc desktop --focus ^4

[module/xbacklight]
